<!DOCTYPE html>
<html ng-app="shopAdmin">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - ECommerce</title>

    <environment names="Development">
        <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.css" />
        <link href="~/css/admin-core.css" rel="stylesheet" />
    </environment>
    <environment names="Staging,Production">
        <link rel="stylesheet" href="https://ajax.aspnetcdn.com/ajax/bootstrap/3.3.5/css/bootstrap.min.css"
              asp-fallback-href="~/lib/bootstrap/dist/css/bootstrap.min.css"
              asp-fallback-test-class="sr-only" asp-fallback-test-property="position" asp-fallback-test-value="absolute" />
        <link rel="stylesheet" href="~/css/admin-core.min.css" asp-append-version="true" />
    </environment>
    <link href="~/lib/angular-material/angular-material.css" rel="stylesheet"/>
    <link href="~/lib/angular-bootstrap/ui-bootstrap-csp.css" rel="stylesheet"/>
    <link href="~/lib/summernote/summernote.css" rel="stylesheet" />
    <link href="~/css/admin-core.css" rel="stylesheet"/>

    <script src="~/lib/jquery/dist/jquery.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.js"></script>
    <script src="~/lib/summernote/summernote.js"></script>
    <script src="~/lib/angular/angular.js"></script>
    <script src="~/lib/angular-ui-router/angular-ui-router.js"></script>
    <script src="~/lib/angular-animate/angular-animate.js"></script>
    <script src="~/lib/angular-aria/angular-aria.js"></script>
    <script src="~/lib/angular-messages/angular-messages.js"></script>
    <script src="~/lib/angular-material/angular-material.js"></script>
    <script src="~/lib/angular-smart-table/smart-table.js"></script>
    <script src="~/lib/ng-file-upload/ng-file-upload.js"></script>
    <script src="~/lib/angular-bootstrap/ui-bootstrap.js"></script>
    <script src="~/lib/angular-bootstrap/ui-bootstrap-tpls.js"></script>
    <script src="~/lib/angular-summernote/angular-summernote.js"></script>

    <script src="~/admin/admin-app.js"></script>
    <script src="~/admin/common/common.js"></script>
    <script src="~/admin/common/summernoteservice.js"></script>
    <script src="~/admin/common/isolateSubForm.js"></script>
    <script src="~/admin/dashboard/dashboard.module.js"></script>

    <script src="~/admin/brand/brand.module.js"></script>
    <script src="~/admin/brand/brand-service.js"></script>
    <script src="~/admin/brand/brand-list.js"></script>
    <script src="~/admin/brand/brand-create.js"></script>
    <script src="~/admin/brand/brand-edit.js"></script>
</head>
<body>
    <div class="navbar navbar-inverse">
        <div class="container-fluid">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                <a ui-sref="dashboard" class="navbar-brand">ECommerce Admin</a>
            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav">
                    <li class="dropdown">
                        <a href="javascript:void(0)" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false">Catalog <span class="caret"></span></a>
                        <ul class="dropdown-menu">
                            <li><a ui-sref="brand">Brands</a></li>
                        </ul>
                    </li>
                </ul>
                @await Html.PartialAsync("_LoginPartial")
            </div>
        </div>
    </div>

    <div class="container-fluid body-content">
        @RenderBody()
        <hr/>
        <footer>
            <p class="pull-left">&copy; 2016 - ECommerce</p>
            <p class="pull-right">Powered by <a asp-controller="Home" asp-action="Index"><strong>ECommerce</strong></a></p>
        </footer>
    </div>

    @RenderSection("scripts", required: false)
</body>
</html>
